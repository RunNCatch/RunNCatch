<div class="menu">
  <div class="click-maps">
    <a href="/results-map"><div><span>MAPAS</span></div></a>
  </div>
  <div class="click-list">
    <a href="/results"><div>LISTADO</div></a>
  </div>
  
  {{#is rol "Admin"}}  
  <div>
    <a href="/admin"><div>ADMIN</div></a>
  </div>
  {{/is}}
  {{#is rol "Customer"}} 
  <div>
    <a href="/profile/{{id}}"><div>PERFIL</div></a>
  </div>
  {{/is}}
  {{#unless rol}} 
  <div>
    <a href="/auth/login"><div>LOGIN</div></a>
  </div>
  {{/unless}}
</div>
  
{{#each usersFound}}
<div class="list-element">
  <a href="/profile/{{_id}}" class="">
    <div class="list-info">
      <div class="list-name">
        <h3>{{username}}</h3>
      </div>
    </div>
  </a>
  <div class="list-buttons">
    <a href="/delete-user/{{_id}}">
      <div class="list-delete button">
        <h3>DELETE</h3>
      </div>
    </a>
    <a href="/profile/edit/{{_id}}">
      <div class="list-edit button">
        <h3>EDIT</h3>
      </div>
    </a>
  </div>
</div>
{{/each}}