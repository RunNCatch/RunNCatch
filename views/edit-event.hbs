<div>
  <form action="/edit-event/{{event._id}}" method="POST" class="new-form">
    <input name="name" type="text" class="form-control" id="name-input" placeholder="name" value="{{event.name}}">
    <select name="type">
      <option value="Offers">Offers</option>
      <option value="Missions">Missions</option>
    </select>
    <input name="description" type="text" class="form-control" id="description-input" placeholder="description"
      value="{{event.description}}">
    <input type="datetime-local" id="meeting-time" name="start" value="2020-02-21T19:30" min="2020-01-01T00:00"
      max="2020-12-31T00:00">
    <select name="tag">
      <option value="culture">culture</option>
      <option value="relax">relax</option>
      <option value="restoration">restoration</option>
      <option value="shopping">shopping</option>
    </select>
    <input name="duration" type="number" class="form-control" id="inversions-input" placeholder="duration"
      value="{{event.duration}}">
    <input name="location" type="text" class="form-control" id="length-input" placeholder="location" value="Madrid">
    <input name="punctuationReward" type="number" class="form-control" id="length-input"
      placeholder="punctuation reward" value="{{event.punctuationReward}}">
    <input name="levelRequiered" type="number" class="form-control" id="length-input" placeholder="level required"
      value="{{event.levelRequiered}}">
    <input name="discount" type="number" class="form-control" id="length-input" placeholder="discount"
      value="{{event.discount}}">
    <input name="image" type="file" class="form-control" id="length-input" placeholder="image url">
    <button type="submit" class="btn btn-dark">Edit event</button>
  </form>
</div>